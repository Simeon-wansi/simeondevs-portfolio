{
  "version": 2,
  "installCommand": "echo 'No dependencies to install'",
  "outputDirectory": ".",
  "framework": null,
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "comment": "Force deploy: 2025-11-12T20:15:00Z - CSS cache fix",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}